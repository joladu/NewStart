<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_detail_info"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_user"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:src="@drawable/person_holder_logout_x2"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_20"
        />
    <TextView
        android:id="@+id/tv_name_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_content_forum_text"
        android:textSize="@dimen/title_toolbar_text_size"
        android:layout_toEndOf="@+id/civ_head_user"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_20"
        tools:text="陈华山"
        />

    <TextView
        android:id="@+id/tv_cancel_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="查看"
        android:textColor="@color/window_bg"
        android:textSize="@dimen/title_toolbar_text_size"
        android:layout_marginEnd="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="#252C42"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        />

    <TextView
        android:id="@+id/tv_describe_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_text_gray"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/civ_head_user"
        android:layout_below="@+id/tv_name_apply"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"
        tools:text="文学  民族学  北京交通大学海滨学院"
        />

    <TextView
        android:id="@+id/tv_apply_status_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textColor="#808288"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/civ_head_user"
        android:layout_below="@+id/tv_describe_friend"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"

        />

    <TextView
        android:id="@+id/tv_apply_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D0021B"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tv_apply_status_pre"
        android:layout_below="@+id/tv_describe_friend"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_marginBottom="@dimen/qb_px_10"
        tools:text="未处理"
        />


    <TextView
        android:id="@+id/tv_apply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请时间：刚刚"
        android:textColor="#808288"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/civ_head_user"
        android:layout_below="@+id/tv_apply_status_pre"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_marginBottom="@dimen/qb_px_10"
        />


</RelativeLayout>