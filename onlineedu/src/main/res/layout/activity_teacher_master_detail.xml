<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jola.onlineedu.ui.activity.TeacherMasterDetailActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_240"
        android:background="@drawable/bg_teacher_master_datail_x2"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_user"
            android:layout_width="@dimen/qb_px_75"
            android:layout_height="@dimen/qb_px_75"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_45"
            android:src="@drawable/person_holder_logout_x2"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_head_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="陈华山"
            android:textSize="22sp"
            android:textColor="#252D41"
            />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="四年级  语文    北京交通大学海滨学院  "
            android:textSize="14sp"
            android:textColor="#252D41"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_school"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注数："
                android:textColor="#555555"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#0099E1"
                android:textSize="14sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程数："
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#0099E1"
                android:textSize="14sp"
                />


        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divide_line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_brief_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教师简介:"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:textColor="#252D41"
            />

        <TextView
            android:id="@+id/tv_brief_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_brief_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="中共党员，本科学历，小学高级教师。作为语文学科带头人被学校派往昆明进行课题骨干培训，使自己的专业水平得以提升。"
            android:textColor="#252D41"
            android:textSize="14sp"
            />

    </RelativeLayout>


</LinearLayout>
