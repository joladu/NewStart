<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_170"
    android:layout_height="@dimen/qb_px_170"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:background="@color/window_bg"
    >

    <FrameLayout
        android:id="@+id/fl_live_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_110"
        android:layout_margin="3dp"
        android:background="@color/divide_line_gray"
        >
        <!--android:background="@drawable/shape_gray_bg"-->
        <ImageView
            android:id="@+id/iv_course_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_placeholder"
            android:scaleType="fitXY"
            />

        <!--android:text="￥14.00"-->
        <TextView
            android:id="@+id/tv_price_relative_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_price_relative"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_marginBottom="@dimen/qb_px_10"
            />
    </FrameLayout>

    <!--android:text="洋葱教学"-->
    <TextView
        android:id="@+id/tv_title_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_live_image"
        android:textColor="@color/title_text"
        android:textSize="@dimen/title_toolbar_text_size"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"
        />

    <!--android:text="洋葱教学洋葱教学洋葱教学洋葱教学洋葱教学洋葱教学洋葱教学"-->
    <TextView
        android:id="@+id/tv_brief_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_course"
        android:textColor="@color/title_text"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/qb_px_10"
        />

</RelativeLayout>