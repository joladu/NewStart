<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_popup_window">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_content_to_border"
        android:layout_marginStart="@dimen/margin_content_to_border"
        android:layout_marginTop="90dp"
        android:background="@drawable/shape_radiu_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="请输入昵称"
            android:textColor="@color/black_title_popup_window"
            android:textSize="@dimen/btn_single_text_size"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_content_to_border"
            android:background="@drawable/shape_rectangle_white_gray"
            android:lines="1"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/divide_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBtnLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/cancel_logout_text"
                android:textColor="@color/black_title_popup_window"
                android:textSize="@dimen/btn_pop_text_size"
                android:visibility="visible" />

            <View
                android:id="@+id/view_between_two_divider"
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="@color/divide_line_gray" />

            <TextView
                android:id="@+id/tvBtnRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm_logout_text"
                android:textColor="@color/black_title_popup_window"
                android:textSize="@dimen/btn_pop_text_size"
                android:textStyle="bold"
                />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>