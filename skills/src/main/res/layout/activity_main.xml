<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pic in Pic"
        android:background="@drawable/shape_red_bg_corner"
        android:textColor="#fff"
        android:onClick="pictureInPic"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TensorFlow lite"
        android:background="@drawable/shape_red_bg_corner"
        android:textColor="#fff"
        android:onClick="tensorFlow"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animated Pie View"
        android:background="@drawable/shape_red_bg_corner"
        android:textColor="#fff"
        android:onClick="animatedPieView"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="custom_pull_refresh"
        android:background="@drawable/shape_red_bg_corner"
        android:textColor="#fff"
        android:onClick="customPullRefresh"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="collapsing toolbar"
        android:background="@drawable/shape_red_bg_corner"
        android:textColor="#fff"
        android:onClick="collapsingToolbar"
        android:layout_margin="10dp"
        />

</LinearLayout>
